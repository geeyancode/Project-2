<div class="h2 text-left"> {{category.categoryName}}</div>

<div class="mx-auto">
    <div class="productRow row align-center">
        {{#each products}}
        <div class="productColumn col-lg-4 col-md-6 col-sm-6 col-xs-12">
            <div class="container-fliud">
                <div class="wrapper row">
                    <div class="preview col-md-6">
                        <div class="preview-pic tab-content">
                            <div class="tab-pane active" id="pic-1"><img src="{{this.imgLink}}"
                                    class="img-responsive" />
                            </div>
                        </div>
                    </div>
                    <div class="details col-md-6">
                        <h3 class="product-title">{{#if this.productName}}
                            {{this.productName}}
                            {{else}}
                            All Products
                            {{/if}}</h3>
                        <p class="lastChange vote"><strong>Available Quantity: </strong> {{this.availableQuantity}} </p>
                        <p class="lastChange product-description">{{this.description}}</p>
                        <h4 class="lastChange price">Current price: <span>${{this.price}}</span></h4>
                        <p class=" lastChange vote"><strong>Dated Posted: </strong>
                            {{ formatDate this.uploadDate day="numeric" month="long" year="numeric"}}</p>
                        <small>Quantity</small>
                        <div><input class="productQuantity" id="productQuantity{{this.productId}}" type="number"
                                value="1"></input>
                            <button data-productName="{{this.productName}}" data-quantity="{{this.availableQuantity}}"
                                data-img="{{this.imgLink}}" data-price="{{this.price}}"
                                data-productid="{{this.productId}}" class="buyProductSubmitBtn btn-outline-success"
                                type="submit">add to
                                cart</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>


<div class="modal fade" id="modalProduct" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle"
    aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-sm" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Added to cart</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="card" style="w-100">
                    <img id="imgModal" class="card-img-top" alt="Card image cap">
                    <div class="card-body">

                        <p id="modalProductName" class="card-text"></p>
                    </div>
                    <ul class="list-group list-group-flush">
                        <li id="modalProductPrice" class="list-group-item"></li>
                        <li id="modalProductQuantity" class="list-group-item"></li>
                    </ul>
                </div>
            </div>
            <div class="modal-footer">
                {{!-- <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button> --}}
                <button id="btnModalCart" type="button" class="btn btn-primary">Go to your Cart</button>
            </div>
        </div>
    </div>
</div>

